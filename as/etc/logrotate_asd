/var/log/aerospike/aerospike_xdr.log {
    missingok
    daily
    rotate 90
    dateext
    compress
    olddir /var/log/aerospike/
}

/var/log/aerospike/aerospike.log {
    daily
    rotate 90
    dateext
    compress
    olddir /var/log/aerospike
    missingok
    notifempty
    postrotate 
        (kill -HUP `cat /var/run/aerospike/asd.pid`) > /dev/null 2>&1 || true
    endscript
}
